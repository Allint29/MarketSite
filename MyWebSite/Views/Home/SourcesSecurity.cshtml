@{
    ViewData["Title"] = "Поиск инструментов источника";
}
@using System.Diagnostics.Eventing.Reader
@model BrokerRepositorySecurity
<div>
    <h3 class="display-4">Создание источников сделок</h3>

    <div class="container">
        <div class="row justify-content-md-center">
            <div class="col justify-content-center">
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="jsHandAutoInput" id="jsHandInput" value="hands">
                    <label class="form-check-label" for="jsHandInput">Ввести вручную</label>
                </div>
            </div>
            <div class="col justify-content-center">
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="jsHandAutoInput" id="jsAutoInput" value="auto">
                    <label class="form-check-label" for="jsAutoInput">Обновить с сайта источника</label>
                </div>
            </div>
        </div>
    </div>
    <!-- <div class="form-check form-check-inline">
        <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio3" value="option3" disabled>
        <label class="form-check-label" for="inlineRadio3">3 (disabled)</label>
    </div> -->
    <div class="container">
        <div class="row justify-content-md-center">
            <div class="col justify-content-center">
                <!--Форма ввода источника вручную-->
                <form asp-action="SourcesSecurity" asp-controller="Home" asp-antiforgery="true">
                    <div class="container">
                        <div class="row justify-content-md-center" >
                            <div class="col justify-content-center">
                                <label for="security.IdInt" class="lbl-primary">IdInt</label>
                                <input type="number" class="form-control lbl-primary js-hide-for-auto" id="security.IdInt" name="security.IdInt" aria-describedby="">
                            </div>
                            <div class="col justify-content-center">
                                <label for="security.IdString" class="lbl-primary">IdString</label>
                                <input type="text" class="form-control lbl-primary js-hide-for-auto" id="security.IdString" name="security.IdString">
                            </div>
                            <div class="col justify-content-center">
                                <label for="security.Name" class="lbl-primary">Name</label>
                                <input type="text" class="form-control lbl-primary js-hide-for-auto" id="security.Name" name ="security.Name">
                            </div>
                            <div class="col justify-content-center">
                                <label for="security.Code" class="lbl-primary">Code</label>
                                <input type="text" class="form-control lbl-primary js-hide-for-auto" id="security.Code" name ="security.Code">
                            </div>
                            <div class="col justify-content-center">
                                <label for="security.Market" class="lbl-primary">Market</label>
                                <input type="text" class="form-control lbl-primary js-hide-for-auto" id="security.Market" name="security.Market">
                            </div>
                            <div class="col justify-content-center">
                                <label for="security.MarketId" class="lbl-primary">MarketId</label>
                                <input type="text" class="form-control lbl-primary js-hide-for-auto" id="security.MarketId" name="security.MarketId">
                            </div>
                            <div class="col justify-content-center">
                                <input class="btn-primary js-hide-for-auto" type="submit" value="Ввести новый инструмент" />
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="col justify-content-center">
                <!--Форма выбора обновлять источники из сети или вводить новый вручную-->
                <form asp-action="InspectSecurity" asp-controller="Home" asp-antiforgery="true">
                    <div class="container">
                        <div class="row justify-content-md-center" >
                            <div class="col justify-content-center">
                                <label for="source_security_id" class="lbl-primary">Источник</label>
                                <select-source-securities name="source_security_id" id="source_security_id" class="form-control lbl-primary js-hide-for-hands" elements="@ViewBag.SourceSecurityList"></select-source-securities>
                            </div>
                            <div class="col justify-content-center">
                                <input class="btn-primary js-hide-for-hands" type="submit" value="Обновить источники в БД" />
                            </div>
                        </div>
                    </div>
                </form>
            </div>

        </div>
    </div>




    @if (@ViewBag.SecuritiesDictionary != null)
    {
    }
    else
    {
        <h3>Уточните поиск, элементы не найдены или их больше 30</h3>
    }
</div>
